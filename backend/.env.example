# AI-Manus Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose your LLM provider: deepseek, blackbox, openai
LLM_PROVIDER=deepseek

# DeepSeek Configuration (default)
API_KEY=your-deepseek-api-key-here
API_BASE=https://api.deepseek.com/v1
MODEL_NAME=deepseek-chat

# Blackbox AI Configuration (optional)
# Get your API key from: https://www.blackbox.ai/
# Supports: Chat, Image Generation (Flux, SDXL), Video Generation (Veo), Web Search
BLACKBOX_API_KEY=sk-SuSCd8TN7baNnh2EcFnGzw
BLACKBOX_API_BASE=https://api.blackbox.ai

# Model Parameters
TEMPERATURE=0.7
MAX_TOKENS=2000

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=manus
# MONGODB_USERNAME=
# MONGODB_PASSWORD=

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# Sandbox Configuration
# =============================================================================
# SANDBOX_ADDRESS=
# SANDBOX_IMAGE=
# SANDBOX_NAME_PREFIX=manus-sandbox
SANDBOX_TTL_MINUTES=30
# SANDBOX_NETWORK=
# SANDBOX_CHROME_ARGS=
# SANDBOX_HTTPS_PROXY=
# SANDBOX_HTTP_PROXY=
# SANDBOX_NO_PROXY=

# =============================================================================
# Search Engine Configuration
# =============================================================================
SEARCH_PROVIDER=bing
# GOOGLE_SEARCH_API_KEY=
# GOOGLE_SEARCH_ENGINE_ID=

# =============================================================================
# Authentication Configuration
# =============================================================================
AUTH_PROVIDER=password
# PASSWORD_SALT=
PASSWORD_HASH_ROUNDS=10
PASSWORD_HASH_ALGORITHM=pbkdf2_sha256
LOCAL_AUTH_EMAIL=admin@example.com
LOCAL_AUTH_PASSWORD=admin

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=
# EMAIL_PASSWORD=
# EMAIL_FROM=

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# MCP Configuration
# =============================================================================
MCP_CONFIG_PATH=/etc/mcp.json

# =============================================================================
# Stripe Billing Configuration
# =============================================================================
# Get these from https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_BASIC=price_your_basic_plan_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_plan_price_id

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
